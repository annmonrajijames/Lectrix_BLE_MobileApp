<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Search Parameters EditText at the top -->
    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search Parameters" />

    <!-- Horizontal layout for Enable Selection & Show Selected Parameters -->
    <LinearLayout
        android:id="@+id/selectionButtonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/searchEditText"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/enableSelectionButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Enable Selection" />

        <Button
            android:id="@+id/showSelectedButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Show Selected Parameters"
            android:layout_marginStart="10dp" />
    </LinearLayout>

    <!-- ScrollView for parameter rows -->
    <ScrollView
        android:id="@+id/parameterScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectionButtonsLayout"
        android:layout_above="@+id/bottomButtonsLayout"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:id="@+id/parameterLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Example row for CellVol01 -->
            <LinearLayout
                android:id="@+id/rowCellVol01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <CheckBox
                    android:id="@+id/cbCellVol01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvCellVol01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CellVol01: N/A"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Additional parameter rows can be added here -->
        </LinearLayout>
    </ScrollView>

    <!-- Bottom horizontal layout for recording controls -->
    <LinearLayout
        android:id="@+id/bottomButtonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <Button
            android:id="@+id/stopRecordingButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Stop Recording" />

        <Button
            android:id="@+id/saveLocationButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Start Recording"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp" />

        <Button
            android:id="@+id/shareButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Share CSV" />
    </LinearLayout>

</RelativeLayout>
