<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Search box remains at the top -->
    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search parameters" />

    <!-- CHOOSE SAVE LOCATION button (now the first action button) -->
    <Button
        android:id="@+id/saveLocationButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Save Location"
        android:layout_below="@id/searchEditText"
        android:layout_marginTop="20dp" />

    <!-- STOP RECORDING button -->
    <Button
        android:id="@+id/stopRecordingButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop Recording"
        android:layout_below="@id/saveLocationButton"
        android:layout_marginTop="10dp" />

    <!-- New button: ENABLE SELECTION -->
    <Button
        android:id="@+id/enableSelectionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enable Selection"
        android:layout_below="@id/stopRecordingButton"
        android:layout_marginTop="10dp" />

    <!-- New button: SHOW SELECTED PARAMETERS -->
    <Button
        android:id="@+id/showSelectedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Selected Parameters"
        android:layout_below="@id/enableSelectionButton"
        android:layout_marginTop="10dp" />

    <!-- ScrollView for parameter rows (below the new buttons) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/showSelectedButton"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Row for CellVol01 -->
            <LinearLayout
                android:id="@+id/rowCellVol01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- CheckBox (hidden by default) -->
                <CheckBox
                    android:id="@+id/cbCellVol01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <!-- TextView for displaying CellVol01 -->
                <TextView
                    android:id="@+id/tvCellVol01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CellVol01: N/A"
                    android:visibility="visible"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <!-- Additional rows for other parameters, if needed -->
        </LinearLayout>
    </ScrollView>

    <!-- Placeholder for other controls at the bottom -->
    <RelativeLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true">
    </RelativeLayout>
</RelativeLayout>
